<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd
http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 ">
    <id>app</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>assembly*.xml</exclude>
                <exclude>VERSION</exclude>
                <exclude>local/**</exclude>
                <exclude>dev/**</exclude>
                <exclude>test/**</exclude>
                <exclude>prod/**</exclude>
                <exclude>application.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/${env}</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/classes/VERSION</source>
            <outputDirectory>conf/</outputDirectory>
            <destName>VERSION-${project.version}</destName>
        </file>
        <file>
            <source>bin/app.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>bin/start.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>bin/stop.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>target/classes/${env}/setenv.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>bin/200.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>bin/503.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>bin/change_status.sh</source>
            <fileMode>777</fileMode>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib/</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <!--<excludes>-->
            <!--</excludes>-->
        </dependencySet>
    </dependencySets>
</assembly>
